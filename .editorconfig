root = true

[*]
indent_style = space
indent_size = 4
tab_width   = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ahk]
indent_style = tab

[{.gitconfig,.gitconfig.,.gitmodules}*]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
